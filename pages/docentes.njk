{% extends "base.njk" %}

{% block main %}
    <h4>Docentes</h4>
    <div class="docentes__table">
        <table class="highlight">
            <thead>
                <tr>
                    <th>Profesores de Tiempo Completo</th>
                </tr>
            <thead>

            <tbody>
                {% for prof in meta.ptc %}
                <tr>
                    <td>
                        {{prof.name}}
                        <span>{{prof.email}}</span>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <table class="highlight responsive-table">
            <thead>
                <tr>
                    <th>Profesores por Horas</th>
                </tr>
            <thead>
            <tbody>
                {% for prof in meta.pph %}
                <tr>
                    <td>
                        {{prof.name}}
                        <span>{{prof.email}}</span>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}